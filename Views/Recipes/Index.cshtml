@model IEnumerable<WAD_CW.Models.Recipes>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="d-flex justify-content-between mb-3">
        <h2> Recipes</h2>
            <button class="btn btn-primary">
                <a class="link-light text-decoration-none" asp-action="Create">Create New</a>
            </button>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-3">
                <div class="card" style="width: 18rem; height: 25rem">
                    <img style="height: 50%; object-fit: cover" src=@Html.DisplayFor(modelItem => item.Image) class="card-img-top" alt="recipeImg">
                    <div class="card-body">
                        <h5 class="card-title">Card title</h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
